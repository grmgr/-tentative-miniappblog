<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">
          <%= simple_format(post.name) %></span>
          <%= simple_format(post.text) %>
        </div>
        <div class="card-action">
          <% if user_signed_in? %>
            <% if current_user.id == post.user.id %>
              <li class="tab"><%= link_to 'Update', "/posts/#{post.id}/edit", method: :get %></li>
              <li class="tab"><%= link_to 'Delete', "/posts/#{post.id}", method: :delete %></li>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>